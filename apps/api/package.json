{
  "name": "api",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm prisma:generate && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.json",
    "clean": "rm -rf node_modules dist",
    "dev": "nodemon",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "devEnv": "dotenv -e .env.development --",
    "prodEnv": "dotenv -e .env.production --",
    "prisma": "npx prisma",
    "prisma:format": "npx prisma format",
    "prisma:generate": "pnpm run devEnv npx prisma generate",
    "prisma:db-push": "pnpm run devEnv npx prisma db push",
    "prisma:migrate": "pnpm run devEnv npx prisma migrate dev --name init",
    "prisma:seed": "pnpm run devEnv npx prisma db seed",
    "prisma:studio": "pnpm run devEnv npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@syncora/exceptions": "workspace:*",
    "@syncora/logger": "workspace:*",
    "@syncora/utils": "workspace:*",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.9.2",
    "@swc/helpers": "^0.5.15",
    "@syncora/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.9.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "prisma": "5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
